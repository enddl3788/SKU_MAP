<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="교직원식당"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#3A4CA8"
                    android:textColor="@color/white"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="월"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/staff_cafeteria_mon"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="화"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/staff_cafeteria_tue"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="수"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/staff_cafeteria_wed"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="목"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/staff_cafeteria_thu"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="금"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/staff_cafeteria_fri"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lunch_mon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="15dp"
                    android:autoSizeTextType="uniform"
                    android:background="#CBCBCB"
                    android:gravity="center"
                    android:text="\n\n\n"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/lunch_tue"
                    android:background="#CBCBCB"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n잠시만 기다려주세요\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/lunch_wed"
                    android:background="#CBCBCB"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/lunch_thu"
                    android:background="#CBCBCB"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/lunch_fri"
                    android:background="#CBCBCB"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/dinner_mon"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/dinner_tue"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/dinner_wed"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/dinner_thu"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/dinner_fri"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>