<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="학생식당"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#3A4CA8"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="20dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="월"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/student_cafeteria_mon"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="화"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/student_cafeteria_tue"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="수"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/student_cafeteria_wed"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="목"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/student_cafeteria_thu"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="금"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/student_cafeteria_fri"
                    android:background="#5D6DBE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/RN_mon"
                    android:background="#CBCBCB"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/RN_tue"
                    android:background="#CBCBCB"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/RN_wed"
                    android:background="#CBCBCB"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/RN_thu"
                    android:background="#CBCBCB"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/RN_fri"
                    android:background="#CBCBCB"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/Tb_mon"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/Tb_tue"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/Tb_wed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:gravity="center"
                    android:text="\n잠시만 기다려주세요\n"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/Tb_thu"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/Tb_fri"
                    android:background="#DEDEDE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/FR_mon"
                    android:background="#EEEEEE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/FR_tue"
                    android:background="#EEEEEE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/FR_wed"
                    android:background="#EEEEEE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/FR_thu"
                    android:background="#EEEEEE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="\n\n\n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/FR_fri"
                    android:background="#EEEEEE"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>